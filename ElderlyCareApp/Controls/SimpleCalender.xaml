<UserControl x:Class="ElderlyCareApp.Controls.SimpleCalender"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             mc:Ignorable="d" 
             d:DesignHeight="280" d:DesignWidth="600"
             Height="Auto" Width="Auto">
    <StackPanel Grid.Column="0">
        <hc:FlipClock HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <TextBlock x:Name="DateDisplay" Margin="5" FontSize="40" Foreground="DeepSkyBlue" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock x:Name="ChineseDateText" Margin="5" FontSize="26" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </StackPanel>
</UserControl>
