<UserControl x:Class="OldCare.Settings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:prop="clr-namespace:OldCare.Properties"
             xmlns:local="clr-namespace:OldCare"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="400">
    <StackPanel>
        <StackPanel Orientation="Horizontal" Margin="5">
            <hc:NumericUpDown Value="{Binding FontSizeRaw, Mode=TwoWay}" Maximum="30" Minimum="16" Width="200" hc:InfoElement.Title="字号" Style="{StaticResource NumericUpDownExtend}"/>
        </StackPanel>
    </StackPanel>
</UserControl>
